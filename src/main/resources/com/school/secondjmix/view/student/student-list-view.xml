<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://studentListView.title"
      focusComponent="studentsDataGrid">
    <data>
        <collection id="studentsDc"
                    class="com.school.secondjmix.entity.Student">
            <fetchPlan extends="_base">
                <property name="clazz">
                    <property name="school">
                        <property name="code"/>
                        <property name="name"/>
                    </property>
                    <property name="name"/>
                </property>
            </fetchPlan>
            <loader id="studentsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Student e]]>
                </query>
            </loader>
        </collection>
        <collection id="clazzesDc" class="com.school.secondjmix.entity.Clazz">
            <loader id="clazzesDl" readOnly="true">
                <query>
                    <![CDATA[select e from Clazz e]]>
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </collection>
        <instance id="studentSearchDc" class="com.school.secondjmix.entity.StudentSearch">
            <fetchPlan/>
            <loader id="studentSearchDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <vbox>
            <details summaryText="Search" opened="true">
                <formLayout id="searchForm" dataContainer="studentSearchDc">
                    <responsiveSteps>
                        <responsiveStep minWidth="0" columns="1"/>
                        <responsiveStep minWidth="25em" columns="2"/>
                        <responsiveStep minWidth="50em" columns="3"/>
                    </responsiveSteps>
                    <textField id="nameField" property="name" clearButtonVisible="true"/>
                    <datePicker id="dateOfBirthField" property="dateOfBirth" clearButtonVisible="true"/>
                    <textField id="phoneNumberField" property="phoneNumber" allowedCharPattern="\d" maxLength="10"/>
                    <textField id="addressField" property="address" clearButtonVisible="true"/>
                    <textField id="citizenIdField" property="citizenId" allowedCharPattern="\d" maxLength="12"/>
                    <entityComboBox id="clazzField" property="clazz" itemsContainer="clazzesDc">
                        <actions>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                    </entityComboBox>
                </formLayout>
                <div height="12px"/>
                <hbox id="searchButtons" justifyContent="END">
                    <button id="clearButton" text="Clear" icon="lumo:cross"/>
                    <button id="searchButton" text="Search" icon="lumo:search"/>
                </hbox>
            </details>
        </vbox>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="studentsDataGrid.create"/>
            <button id="editBtn" action="studentsDataGrid.edit"/>
            <button id="removeBtn" action="studentsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="studentsDl"/>
        </hbox>
        <dataGrid id="studentsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="studentsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="dateOfBirth"/>
                <column property="phoneNumber"/>
                <column property="address"/>
                <column property="citizenId"/>
                <column property="clazz"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
