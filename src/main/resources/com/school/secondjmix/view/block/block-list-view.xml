<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://blockListView.title"
      focusComponent="blocksDataGrid">
    <data>
        <collection id="blocksDc"
                    class="com.school.secondjmix.entity.Block">
            <fetchPlan extends="_base"/>
            <loader id="blocksDl" readOnly="true">
                <query>
                    <![CDATA[select e from Block e order by e.value asc]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="blocksDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="blocksDataGrid.create"/>
            <button id="editBtn" action="blocksDataGrid.edit"/>
            <button id="removeBtn" action="blocksDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="blocksDl"/>
        </hbox>
        <dataGrid id="blocksDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="blocksDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="value"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
